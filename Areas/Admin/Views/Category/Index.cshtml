@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Categories</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-bookmark-plus-fill"></i> Create Category
                </a>
            </div>
        </div>
           <table class="table table-bordered table-striped">
               <thead>
               <tr>
                   <th>
                       Category Name
                   </th>
                   <th>
                       Display Order
                   </th>
                   <th>
                       
                   </th>
               </tr>
               </thead>
               <tbody>
               @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
               {
                   <tr>
                       <td>@obj.Name</td>
                       <td>
                           @obj.DisplayOrder
                       </td>
                       <td>
                           <div class="w-75 btn-group" role="group">
                               <a style="margin-right: 15px" class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">
                                   <i class="bi bi-pencil"></i>
                               </a>
                               <a class="btn btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">
                                                           <i class="bi bi-trash3"></i>
                                                       </a>
                           </div>
                       </td>
                   </tr>
               }
               </tbody>
           </table>
    </div>
</div>

